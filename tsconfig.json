{
    "compilerOptions": { /* Docs: https://www.typescriptlang.org/tsconfig */
        "target": "ESNext",
        "module": "ESNext",
        "outDir": "bin",
        "rootDir": "src",
        "strict": true,
        "noImplicitAny": false,
        "strictNullChecks": true,
        "checkJs": true,
        "allowJs": true,
        "moduleResolution": "node",
        "types": [
            "node"
        ],
        "lib": [
            "ESNext"
        ],
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "allowUnreachableCode": true,
        "useUnknownInCatchVariables": false,
    },
    "ts-node": {
        "transpileOnly": true,
        "files": true,
        "compilerOptions": {

        }
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.js"
    ],
    "exclude": [
        "node_modules",
        "<node_internals>/**",
    ]
}